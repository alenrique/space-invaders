<Page x:Class="Space_Invaders.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Space_Invaders"
      Background="Black">
    <Grid>
        <Canvas x:Name="GameCanvas" Width="1000" Height="600" Background="Black">
            <!-- Imagem principal -->
            <Image Width="400" Height="200" Source="ms-appx:///Assets/Images/space_invaders.png"
                Canvas.Left="300" Canvas.Top="10" />

            <!-- Ícone e texto 1 -->
            <Image Width="40" Height="40" Source="ms-appx:///Assets/Images/enemy1.png"
                Canvas.Left="400" Canvas.Top="250" />
            <TextBlock Text=" = 10 pts"
                    Foreground="White"
                    FontSize="30"
                    FontFamily="ms-appx:///Assets/Fonts/PixelifySans-VariableFont_wght.ttf"
                    VerticalAlignment="Center"
                    Canvas.Left="450" Canvas.Top="250" />

            <!-- Ícone e texto 2 -->
            <Image Width="40" Height="40" Source="ms-appx:///Assets/Images/enemy2.png"
                Canvas.Left="400" Canvas.Top="300" />
            <TextBlock Text=" = 20 pts"
                    Foreground="White"
                    FontSize="30"
                    FontFamily="ms-appx:///Assets/Fonts/PixelifySans-VariableFont_wght.ttf"
                    VerticalAlignment="Center"
                    Canvas.Left="450" Canvas.Top="300" />

            <!-- Ícone e texto 3 -->
            <Image Width="40" Height="40" Source="ms-appx:///Assets/Images/enemy3.png"
                Canvas.Left="400" Canvas.Top="350" />
            <TextBlock Text=" = 40 pts"
                    Foreground="White"
                    FontSize="30"
                    FontFamily="ms-appx:///Assets/Fonts/PixelifySans-VariableFont_wght.ttf"
                    VerticalAlignment="Center"
                    Canvas.Left="450" Canvas.Top="350" />

            <!-- Ícone e texto 4 (especial) -->
            <Image Width="40" Height="40" Source="ms-appx:///Assets/Images/enemy4.png"
                Canvas.Left="400" Canvas.Top="400" />
            <TextBlock Text=" = ??? Pontos"
                    Foreground="White"
                    FontSize="30"
                    FontFamily="ms-appx:///Assets/Fonts/PixelifySans-VariableFont_wght.ttf"
                    VerticalAlignment="Center"
                    Canvas.Left="450" Canvas.Top="400" />

            <!-- Botão Iniciar Jogo -->
            <Button x:Name="startButton"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Click="StartButton_Click"
                    PointerEntered="StartButton_PointerEntered"
                    PointerExited="StartButton_PointerExited"
                    Canvas.Left="420" Canvas.Top="450">
                <TextBlock x:Name="contentText"
                        Text="Iniciar Jogo"
                        FontSize="28"
                        FontFamily="ms-appx:///Assets/Fonts/PixelifySans-VariableFont_wght.ttf"
                        Foreground="White" />
            </Button>

            <!-- Botão Ranking -->
            <Button x:Name="rankingButton"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Click="RankingButton_Click"
                    PointerEntered="RankingButton_PointerEntered"
                    PointerExited="RankingButton_PointerExited"
                    Canvas.Left="440" Canvas.Top="500"> <!-- Adjusted Top position -->
                <TextBlock Text="Ranking"
                        FontSize="28"
                        FontFamily="ms-appx:///Assets/Fonts/PixelifySans-VariableFont_wght.ttf"
                        Foreground="White" />
            </Button>
        </Canvas>
    </Grid>
</Page>